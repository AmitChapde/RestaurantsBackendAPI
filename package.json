{
  "name": "restaurant-api",
  "version": "1.0.0",
  "description": "Simple Node + MySQL API to return restaurants with top-selling dish.",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "dev": "node --watch src/index.js",
    "start": "node src/index.js",
    "db:schema": "node scripts/run-sql.js sql/schema.sql",
    "db:seed": "node scripts/run-sql.js sql/seed.sql",
    "db:init": "npm run db:schema && npm run db:seed",
    "zip": "cd .. && zip -r restaurant-api.zip restaurant-api"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "morgan": "^1.10.0",
    "mysql2": "^3.11.3",
    "sqlite3": "^5.1.7"
  }
}
